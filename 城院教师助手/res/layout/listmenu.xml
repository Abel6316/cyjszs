<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
 <TableLayout 
    
    android:layout_width="match_parent" 
    android:layout_height="fill_parent">
    
     
     <ImageButton 
                    
                   
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginTop="10.dp"
                    android:layout_marginLeft="1.dp"
                    
                    android:src="@+drawable/logo"
                    />
     
     
     
     
     
     <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
         
        <TextView
         android:id="@+id/tq"
         android:layout_width="wrap_content"
         android:padding="5dp"
          android:layout_marginTop="80.0dip"
          android:drawableLeft="@+drawable/tq"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  天气"
		  android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	
			
		/>
 </TableRow>
     <View android:layout_height="1px" android:background="#CCCCCC" android:layout_width="fill_parent"></View>
    
   <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
            <TextView
         android:id="@+id/cktz"
         android:layout_width="wrap_content"
         android:padding="5dp"
          android:layout_marginTop="8.0dip"
          android:drawableLeft="@+drawable/cktz"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  查看通知"
		  android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	
			
		/>
           
           
      </TableRow>
 <View android:layout_height="1px"   android:layout_marginRight="15.0dip" 
         android:background="#CCCCCC" android:layout_width="fill_parent"></View>
 
 
 
 <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
             <TextView
         android:id="@+id/ckjkt"
         android:layout_width="wrap_content"
         android:padding="5dp"
          android:layout_marginTop="8.0dip"
          android:drawableLeft="@+drawable/ckjkt"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  查看监考条"
		  android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	
			
		/>
            
      </TableRow>
 <View android:layout_height="1px"  android:layout_marginRight="15.0dip" 
         android:background="#CCCCCC" android:layout_width="fill_parent"></View>
 
  <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
             <TextView
         android:id="@+id/chat"
         android:layout_width="wrap_content"
         android:padding="5dp"
          android:layout_marginTop="8.0dip"
          android:drawableLeft="@+drawable/chat"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  聊天"
		  android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	
			
		/>
            
      </TableRow>
 <View android:layout_height="1px"  android:layout_marginRight="15.0dip" 
         android:background="#CCCCCC" android:layout_width="fill_parent"></View>
 
  
  <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
             <TextView
         android:id="@+id/fjdr"
         android:layout_width="wrap_content"
         android:padding="5dp"
          android:layout_marginTop="8.0dip"
          android:drawableLeft="@+drawable/fjdr"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  附近的人"
		 android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	
			
		/>
            
      </TableRow>
 <View android:layout_height="1px"  android:layout_marginRight="15.0dip" 
         android:background="#CCCCCC" android:layout_width="fill_parent"></View>
 
 
   
   
   <TableRow android:layout_width="fill_parent" 
         android:layout_height="wrap_content">
             <TextView
         android:id="@+id/exit"
         android:layout_width="wrap_content"
         android:padding="5dp"
        
          android:layout_gravity="bottom"
		 android:layout_weight="1"
		  android:textSize="17dp"
		 android:text="  退出"
		 android:textColor="#ffffff"
		 android:drawablePadding="0.0dip"
	 android:layout_alignParentBottom="true"
			
		/>
            
      </TableRow>
      
   
 
</TableLayout>
</RelativeLayout>